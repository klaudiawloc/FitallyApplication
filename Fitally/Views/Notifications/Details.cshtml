@model Fitally.Models.Notification

@{
    ViewData["Title"] = "Notification - details";
}

<div class="d-flex flex-column flex-wrap justify-content-center ">
    <h1 class="text-center text-white-50">@ViewData["Title"]</h1>
</div>


<div class="text-white">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>       
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info text-white">Edit</a>
    <a asp-action="Index" class="text-white btn btn-primary">Back to List</a>
</div>
