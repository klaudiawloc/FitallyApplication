@using Fitally.Common
@model Fitally.Models.WorkoutDay

@{
    ViewData["Title"] = "Delete workout";
}

<div class="d-flex flex-column flex-wrap justify-content-center ">
    <h1 class="text-center text-white-50">@ViewData["Title"]</h1>
    <h3 class="text-white">Are you sure you want to delete this?</h3>
</div>

<div class="text-white">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkoutDate)
        </dt>
        <dd class="col-sm-10">
            @(DateHelper.FormatDate(Model.WorkoutDate))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="text-white btn btn-primary">Back to List</a>
    </form>
</div>