@model Fitally.Models.WorkoutExercise

@{
    ViewData["Title"] = "Edit workout exercise";
}

<div class="d-flex flex-row justify-content-center">
    <h1 class="text-center text-white-50">@ViewData["Title"]</h1>
</div>

<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="WorkoutDayId" class="control-label"></label>
                <select asp-for="WorkoutDayId" class="form-control" asp-items="ViewBag.WorkoutDayId"></select>
                <span asp-validation-for="WorkoutDayId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseId" class="control-label"></label>
                <select asp-for="ExerciseId" class="form-control" asp-items="ViewBag.ExerciseId"></select>
                <span asp-validation-for="ExerciseId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Edit" class="btn btn-info text-white" />
                <a asp-action="Index" class="text-white btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
